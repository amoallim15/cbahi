.ap-toastr
	position fixed
	z-index 2000
	top 60px
	width 100%
	> *
		width 60%
		margin-left auto
		margin-right auto
		margin-bottom 7px
		text-align center
		box-shadow 1px 5px 10px rgba(0,0,0,0.05)
		cursor pointer
		opacity 0.7
		&:focus
		&:hover
			opacity 1


.pager
	padding-left 0
	margin-top 1rem
	margin-bottom 1rem
	text-align center
	list-style none

.pager li
	display inline

.pager a 
	cursor pointer
	text-decoration none !important

.pager li
	> a
	> span
		display inline-block
		padding 5px 14px
		background-color #fff
		border 1px solid #ddd
		border-radius 15px

.pager .disabled
	> a
	> a:focus
	> a:hover
		color #818a91
		cursor not-allowed
		background-color #fff

.ap-waterbg
	position relative
	text-align center
	height 0px


.ap-waterbg
	> div
		height 590px
		margin auto
	img
		max-width 80% !important
		height auto
		opacity 0.1

.ap-awad 
	a
		transition all ease-out 0.1s
		text-decoration none !important
	span
		color rgba(0,0,0,.7)

